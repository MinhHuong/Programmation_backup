package utils;

public class Date {

	private int m_day;
	private int m_month;
	private int m_year;
	
	public Date(int d, int m, int y)
	{
		m_day = d;
		m_month = m;
		m_year = y;
	}
	
	public int getDay()
	{
		return m_day;
	}
	
	public int getMonth()
	{
		return m_month;
	}
	
	public int getYear()
	{
		return m_year;
	}
	
	public void setDay(int d)
	{
		m_day = d;
	}
	
	public void setMonth(int m)
	{
		m_month = m;
	}
	
	public void setYear(int y)
	{
		m_year = y;
	}
	
	public String dateToString()
	{
		return Integer.toString(m_day) + "/" + Integer.toString(m_month) + "/" + Integer.toString(m_year);
	}
	
	public int StringToDate(String date)
	{
		String[] res = date.split("/");
		m_day = Integer.parseInt(res[0]);
		m_month = Integer.parseInt(res[1]);
		m_year = Integer.parseInt(res[2]);
	}
}
