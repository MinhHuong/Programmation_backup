package gui;

import java.awt.BorderLayout;
import java.awt.Dimension;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

@SuppressWarnings("serial")
public class MainFrame extends JFrame {
	
	public MainFrame()
	{
		super();
		
		setTitle("Budget Management");
		setPreferredSize(new Dimension(700, 550));
		setLocation(300, 100);
		setLayout(new BorderLayout());
		
		TabPane tabPane = new TabPane();
		add(tabPane, BorderLayout.CENTER);
		
		JPanel pn_ajouter = new JPanel();
		pn_ajouter.setLayout(new FlowLayout(FlowLayout.CENTER, 20, 20));
		pn_ajouter.setPreferredSize(new Dimension(700, 80));
		JButton bt_ajouter = new JButton("Ajouter");
		bt_ajouter.setPreferredSize(new Dimension(100, 30));
		pn_ajouter.add(bt_ajouter);
		
		add(pn_ajouter, BorderLayout.SOUTH);
		
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
	}
	
}
