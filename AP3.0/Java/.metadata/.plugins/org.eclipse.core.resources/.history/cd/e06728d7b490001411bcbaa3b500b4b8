package gui;

import java.awt.BorderLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import gui.depense.MyData;
import gui.depense.TabDepense;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

@SuppressWarnings("serial")
public class MainFrame extends JFrame {
	
	public MainFrame()
	{
		super();
		
		setTitle("Budget Management");
		setSize(700, 550);
		setLocation(300, 100);
		setLayout(new BorderLayout());
		
		TabDepense tabDepense = new TabDepense();
		
		add(tabDepense);
		
		BoutonAdd myListener = new BoutonAdd(tabDepense);
		JButton bt_add = new JButton("Add");
		bt_add.addActionListener(myListener);
		JButton bt_remove = new JButton("Remove");
		bt_remove.addActionListener(myListener);
		
		JPanel pn_boutons = new JPanel();
		pn_boutons.add(bt_add);
		pn_boutons.add(bt_remove);

		add(pn_boutons, BorderLayout.SOUTH);
		
		setDefaultCloseOperation(DISPOSE_ON_CLOSE);
	}
	
	class BoutonAdd implements ActionListener 
	{
		private TabDepense m_tab_dep;
		
		public BoutonAdd(TabDepense td)
		{
			m_tab_dep = td;
		}
		
		@Override
		public void actionPerformed(ActionEvent e) 
		{
			if(e.getActionCommand() == "Add")
			{
				m_tab_dep.getTableModel().addRow(new MyData("Bus", 4000));
			}
			
			if(e.getActionCommand() == "Remove")
			{
				int index = m_tab_dep.getTableModel().getVectorData().size() - 1;
				m_tab_dep.getTableModel().deleteRow(index);
			}
		}
		
	}
}
